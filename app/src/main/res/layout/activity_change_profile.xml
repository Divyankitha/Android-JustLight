<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:paddingTop ="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:scrollbars="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/txt_fullName"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Fullname:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/fullname"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/txt_fullName"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="32dp"
                        android:text="Address:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/txt_address"
                        android:layout_toEndOf="@+id/txt_address"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="23dp"
                        android:text="City:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/txt_city"
                        android:layout_toEndOf="@+id/txt_city"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_pincode"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="19dp"
                        android:text="Pincode:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/pincode"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/txt_pincode"
                        android:layout_toEndOf="@+id/txt_pincode"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_work"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="25dp"
                        android:text="Work:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/work"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/txt_work"
                        android:layout_toEndOf="@+id/txt_work"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gender"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="19dp"
                        android:text="Gender:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/gender"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/txt_gender"
                        android:layout_toEndOf="@+id/txt_gender"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_dob"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="18dp"
                        android:text="Date of Birth:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/txt_dob"
                        android:layout_toEndOf="@+id/txt_dob"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_contact"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="18dp"
                        android:text="Contact:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/contact"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/txt_contact"
                        android:layout_toEndOf="@+id/txt_contact"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/txt_email"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:text="Email:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/txt_email"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_registrationid"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Registration ID:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:id="@+id/registrationid"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/txt_registrationid"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_joineddate"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="18dp"
                        android:text="Joined Date:"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/joineddate"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignBaseline="@+id/txt_joineddate"
                        android:layout_alignBottom="@+id/txt_joineddate"
                        android:layout_toEndOf="@+id/txt_joineddate"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <Button
                    android:id="@+id/SaveProduct"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/mybutton"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"
                    android:layout_below="@+id/password"
                    android:layout_marginEnd="119dp"
                    android:layout_marginTop="68dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>








